 return {\n                    width: `${itemWidth * 2}px`,\n                    height: `${itemWidth * 2}px`\n                };\n            } else {\n                return {\n                    width: `${itemWidth}px`,\n                    height: `${itemWidth}px`\n                };\n            }\n        }\n    },\n    beforeDestroy() {\n        this.stopScrolling();\n    }\n};\n</script>\n  \n<style>\n.image-scroll {\n    text-align: center;\n}\n\n.image-container {\n    overflow: hidden;\n    white-space: nowrap;\n    margin: 20px 0;\n}\n\n.scroll-wrapper {\n    display: inline-block;\n}\n\n.image-item {\n    display: inline-block;\n    margin-right: 10px;\n    transition: all 0.3s ease;\n}\n\nimg {\n    display: block;\n    object-fit: cover;\n}\n</style>\n  "],"mappings":"AAcA,eAAe;EACXA,IAAI,EAAE,iBAAiB;EACvBC,IAAIA,CAAA,EAAG;IACH,OAAO;MACHC,MAAM,EAAE,CACJ;QAAEC,GAAG,EAAE,SAAS;QAAEC,GAAG,EAAE;MAAU,CAAC,EAClC;QAAED,GAAG,EAAE,SAAS;QAAEC,GAAG,EAAE;MAAU,CAAC,EAClC;QAAED,GAAG,EAAE,SAAS;QAAEC,GAAG,EAAE;MAAU,CAAC,EAClC;QAAED,GAAG,EAAE,SAAS;QAAEC,GAAG,EAAE;MAAU,CAAC,EAClC;QAAED,GAAG,EAAE,SAAS;QAAEC,GAAG,EAAE;MAAU,CAAC,EAClC;QAAED,GAAG,EAAE,SAAS;QAAEC,GAAG,EAAE;MAAU,CAAC,EAClC;QAAED,GAAG,EAAE,SAAS;QAAEC,GAAG,EAAE;MAAU,CAAC,EAClC;QAAED,GAAG,EAAE,SAAS;QAAEC,GAAG,EAAE;MAAU,CAAC,CACrC;MACDC,UAAU,EAAE,CAAC;MAAE;MACfC,WAAW,EAAE,CAAC;MAAE;MAChBC,kBAAkB,EAAE,EAAE;IAC1B,CAAC;EACL,CAAC;;EACDC,OAAOA,CAAA,EAAG;IACN,IAAI,CAACC,cAAc,EAAE;EACzB,CAAC;EACDC,OAAO,EAAE;IACLD,cAAcA,CAAA,EAAG;MACb,IAAI,CAACE,KAAI,GAAIC,WAAW,CAAC,MAAM;QAC3B,IAAI,CAACP,UAAS,IAAK,IAAI,CAACC,WAAW;QACnC,IAAI,IAAI,CAACD,UAAS,IAAK,CAAC,IAAI,CAACQ,KAAK,CAACC,cAAc,CAACC,WAAW,EAAE;UAC3D;UACA,IAAI,CAACV,UAAS,GAAI,CAAC;QACvB;MACJ,CAAC,EAAE,EAAE,CAAC;IACV,CAAC;IACDW,aAAaA,CAAA,EAAG;MACZC,aAAa,CAAC,IAAI,CAACN,KAAK,CAAC;IAC7B,CAAC;IACDO,WAAWA,CAACC,KAAK,EAAE;MACf,MAAMC,SAAQ,GAAI,IAAI,CAACP,KAAK,CAACC,cAAc,CAACC,WAAU,GAAI,CAAC;MAC3D,IAAII,KAAI,KAAM,IAAI,CAACZ,kBAAkB,EAAE;QACnC,OAAO;UACHc,KAAK,EAAG,GAAED,SAAQ,GAAI,C